<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicketMerge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Custom Toolbar Theme -->
    <style name="CustomToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/green</item> <!-- 툴바 배경색 -->
    </style>

    <!-- Custom Toolbar Title TextAppearance -->
    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/tenada</item> <!-- 타이틀 폰트 -->
        <item name="android:textSize">20sp</item> <!-- 타이틀 텍스트 크기 -->
        <item name="android:textColor">@color/black</item> <!-- 타이틀 텍스트 색상 -->
    </style>
</resources>